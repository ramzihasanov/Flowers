@model List<Category>
@{
    int counter = 0;
}

    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between">
            <h1>Category Datas</h1>
            <a class="btn btn-primary" style="width:100px;" asp-action="Create" asp-controller="Category">Add</a>
        </div>

        <table class="table table-hover table-striped mt-3 shadow">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cat in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@cat.Name</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@cat.Id.">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@cat.Id">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
